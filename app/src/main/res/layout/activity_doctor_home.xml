<!--         />-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:gravity="bottom"
            android:background="@drawable/bottom_back"
            android:weightSum="3"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_healthTips"
                android:paddingLeft="5dp"
                android:drawablePadding="-20dp"
                android:drawableLeft="@drawable/ic_baseline_health_and_safety_24"
                android:background="@android:color/transparent"
                android:text="Health Tips"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_blogs"
                android:paddingLeft="15dp"
                android:drawablePadding="-20dp"
                android:drawableLeft="@drawable/ic_baseline_edit_24"
                android:background="@android:color/transparent"
                android:text="Blog"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <Button
                android:paddingLeft="5dp"
                android:drawablePadding="-20dp"
                android:drawableLeft="@drawable/ic_baseline_power_settings_new_24"
                android:id="@+id/signOutBtn"
                android:background="@android:color/transparent"
                android:text="Sign Out"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </LinearLayout>

    </RelativeLayout>



</LinearLayout>